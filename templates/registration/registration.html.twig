{% extends 'base.html.twig' %}

{% block title %}Registration Page | MINTOS{% endblock %}

{% block body %}
<h2 class="d-flex justify-content-center ">Registration</h2>
<div class="ml-5 ml-lg-5 d-flex align-content-center justify-content-center">
    <div class="alert alert-success alert-dismissible fade" id="js--ok" style="opacity: 500; display: none;">
        <strong>Success!</strong> <span></span>
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
    </div>
</div>
<div class="d-flex justify-content-center">
    <form class="w-25 p-3 js--formRegistration" type="post">
        <div class="form-group" id="email">
            <label for="inputEmail">Email address *</label>
            <input type="email"  class="form-control"
                   name="email" id="inputEmail" aria-describedby="emailHelp"
                   placeholder="Enter email" required>
            <small id="error" class="form-text"></small>
        </div>
        <div class="form-group" id="password">
            <label for="inputPassword">Password *</label>
            <input type="password" class="form-control" name="password"  id="exampleInputPassword" placeholder="Password">
            <small id="error" class="form-text"></small>
        </div>
        <span class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    Registration
                </button>
        </span>
        Already have account? <a href="{{ path('app_login') }}">Login</a>
    </form>
</div>
{% endblock %}
